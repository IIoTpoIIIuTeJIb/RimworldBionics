  <!-- Surgeon hand -->

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>SurgeonHand</defName>
    <label>surgeon hand</label>
    <labelNoun>a surgeon hand</labelNoun>
    <description>An installed surgeon hand.</description>
    <descriptionHyperlinks><ThingDef>SurgeonHand</ThingDef></descriptionHyperlinks>
    <addedPartProps>
      <solid>true</solid>
    </addedPartProps>
    <stages>
      <li>
        <statOffsets>
          <MedicalTendSpeed>0.10</MedicalTendSpeed>
          <MedicalSurgerySuccessChance>0.05</MedicalSurgerySuccessChance>
          <MedicalOperationSpeed>0.10</MedicalOperationSpeed>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.08</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>knuckle</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
            <alwaysTreatAsWeapon>false</alwaysTreatAsWeapon>
            <soundMeleeHit>MeleeHit_FieldHand</soundMeleeHit>
            <soundMeleeMiss>MeleeMiss_FieldHand</soundMeleeMiss>
          </li>
        </tools>
      </li>
	  
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>scalpel</label>
            <capacities>
              <li>Cut</li>
            </capacities>
            <power>9</power>
            <cooldownTime>2</cooldownTime>
            <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            <soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
            <soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>FieldHand</spawnThingOnRemoved>
  </HediffDef>

  <ThingDef ParentName="BodyPartProstheticImperialBase">
    <defName>SurgeonHand</defName>
